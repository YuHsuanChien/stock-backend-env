{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2023",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "src",
		"paths": {
			"@core/*": [ "core/*" ],
			"@shared/*": [ "shared/*" ],
			"@config/*": [ "config/*" ],
			"@guards/*": [ "guards/*" ],
			"@products/*": [ "products/*" ],
			"@database/*": [ "database/*" ],
		},
		"incremental": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"noFallthroughCasesInSwitch": false
	}
}
